{
  "name": "PTT Auto Login",
  "description": "Automating the login process for PTT.",
  "version": "1.3",
  "manifest_version": 3,
  "permissions": ["storage"],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "/icons/P16.png",
      "32": "/icons/P32.png",
      "48": "/icons/P48.png",
      "128":"/icons/P128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://term.ptt.cc/*"],
      "js": ["src/content.js"]
    }
  ]
}
